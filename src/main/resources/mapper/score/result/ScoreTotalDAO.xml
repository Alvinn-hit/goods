<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.recklessmo.dao.score.result.ScoreTotalDAO">

    <sql id = "columns">
        exam_id, cid, detail
    </sql>

    <insert id="save" parameterType="com.recklessmo.model.score.result.ScoreTotal">
        insert into score_total(exam_id, cid, detail) values
        (#{examId}, #{cid}, #{detail})
    </insert>

    <select id="getByExamAndCID" resultType="com.recklessmo.model.score.result.ScoreTotal">
        select
        <include refid="columns"/>
        from score_total
        where exam_id = #{examId}
    </select>
    

</mapper>