<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.recklessmo.dao.wechat.WechatUserDAO">
    <sql id = "columns">
        id,org_id,open_id,sid,head_url,updated,last_message,deleted
    </sql>


    <select id="getListByOrgId" resultType="com.recklessmo.model.wechat.WechatUser">
        select
        <include refid="columns"/>
        from wechat_user
        where org_id = #{orgId} and deleted = 0
        limit #{startIndex}, #{count}
    </select>

    <select id="getCountByOrgId" resultType="java.lang.Integer">
        select count(1)
        from wechat_user
        where org_id = #{orgId} and deleted = 0
    </select>

    <select id="getByOpenId" resultType="com.recklessmo.model.wechat.WechatUser">
        select
        <include refid="columns"/>
        from wechat_user where open_id = #{openId}
    </select>

</mapper>